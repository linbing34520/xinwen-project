.toptitle{
  width: 100%;
  height: 60rpx;
  background-color: #fa8383;
  color: #fff;
  position: fixed;
  left: 0;
  top: 0;
}

.toptitle text{
  display: inline-block;
  width: 16%;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center
}
.type{
  width: 100%;
  margin-top: 60rpx;
}
.type text{
   display: inline-block;
   width: 14%;
   background: #fa8383;
   height:60rpx;
   margin-left: 4%;
   margin-top: 24rpx;
   text-align: center;
   color: #fff;
   line-height: 60rpx;
   border-radius: 8rpx;
   font-size: 24rpx;
}
.type text.active{
  background-color: #de3232
}
.content{
  width: 94%;
  height: 220rpx;
  border-bottom: 1px #eee solid;
  float: left
}
.content view{
  display: inline-block;
  margin-top: 30rpx;
}
 .wz{
  width: 440rpx;
  font-size: 30rpx
  
}
 .cimg{
  width: 240rpx;
  height: 120rpx;
  float: right
}
image{
  width: 100%;
  height: 100%
}
